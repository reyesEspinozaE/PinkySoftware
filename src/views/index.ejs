    <script>
        function toggleSelected(button) {
            // Remueve la clase 'selected' de todos los botones
            document.querySelectorAll('.btn-custom').forEach(btn => btn.classList.remove('selected'));

            // Agrega la clase 'selected' solo al botón clickeado
            button.classList.add('selected');
        }

        document.getElementById('btnCoordinadorProyecto').addEventListener('click', function () {
            showCard('cardProyecto');
        });

        document.getElementById('btnCoordinadorModelado').addEventListener('click', function () {
            showCard('cardModelado');
        });

        document.getElementById('btnCoordinadorAnalisis').addEventListener('click', function () {
            showCard('cardAnalisis');
        });

        document.getElementById('btnCoordinadorCalidad').addEventListener('click', function () {
            showCard('cardCalidad');
        });

        document.getElementById('btnCoordinadorDocumentacion').addEventListener('click', function () {
            showCard('cardDocumentacion');
        });

        document.getElementById('btnCoordinadorProgramacion').addEventListener('click', function () {
            showCard('cardProgramacion');
        });

        function showCard(cardId) {
            // Hide all cards
            var cards = document.querySelectorAll('.profile-card');
            cards.forEach(function (card) {
                card.style.display = 'none';
            });

            // Show the selected card
            if (cardId) {
                document.getElementById(cardId).style.display = 'block';
            }
        }

        // Initially hide all cards
        window.onload = function () {
            showCard(''); // This will hide all cards on page load
        };
    </script>
