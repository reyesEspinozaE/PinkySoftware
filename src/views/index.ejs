        <style>
            .profile-card {
                display: none;
                border: 0;
                border-bottom: 3px solid #DB7093;
                box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
                overflow: hidden;
            }

            .profile-card img {
                width: 100%;
                height: auto;
            }

            .profile-card h4 {
                margin-bottom: 0.5rem;
            }

            .profile-card p {
                margin-bottom: 0;
                color: #6c757d;
            }

            .profile-card .social-icons a {
                margin-right: 0.5rem;
                color: #0d6efd;
            }

            /* Custom button styles */
            .btn-custom {
                background-color: #dd729b;
                color: #fff;
                border: none;
                border-radius: 5px;
                padding: 10px 20px;
                transition: all 0.3s ease-in-out;
                cursor: pointer;
                margin: 5px;
            }

            .btn-custom:hover {
                background-color: #b63767;
            }

            /* Estilos para el pseudo-elemento :after */
            .btn-custom.selected::after {
                content: '';
                position: absolute;
                width: calc(100% - 20px);
                /* Ajusta el ancho según el padding del botón */
                height: 3px;
                bottom: -3px;
                left: 50%;
                transform: translateX(-50%);
            }

            .social-icons {
                display: flex;
                align-items: center;
                flex-wrap: wrap;
                padding: 0.5 em;
                color: #DB7093;
            }

            .social-icons a {
                font-size: 2em;
                color: #DB7093;
                padding: 0px 0.25em;
            }

            .navbar {
                background: black;
                color: white;
            }

            .navbar-brand,
            .nav-link {
                color: white;
            }

            .navbar-brand:focus,
            .navbar-brand:active,
            .nav-link:focus,
            .nav-link:active {
                color: #bb7181;
            }

            .navbar-brand:hover,
            .nav-link:hover {
                color: #bb7181;
            }

            .ftr {
                background: black;
                color: white;
                text-align: center;
                padding: 1rem;
                width: 100%;
            }
        </style>

</head>

